@model PrescriptionList.Models.Prescription
@{
    ViewData["Title"] = "Delete Prescription";
}

<div class="card shadow p-4">
    <h2 class="text-center mb-4">Delete Prescription</h2>

    <div class="alert alert-warning">
        <h5 class="alert-heading">⚠️ Confirmation Required</h5>
        <p>Are you sure you want to delete this prescription?</p>
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Medication Name</th>
                <th>Fill Status</th>
                <th>Cost</th>
                <th>Request Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.MedicationName</td>
                <td>
                    @if (Model.FillStatus == "Filled")
                    {
                        <span class="badge bg-success">Filled</span>
                    }
                    else if (Model.FillStatus == "Pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">New</span>
                    }
                </td>
                <td>@Model.Cost?.ToString("C")</td>
                <td>@Model.RequestTime.ToString("MM/dd/yyyy HH:mm")</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PrescriptionId" />

        <div class="mt-3">
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash"></i> Yes, Delete
            </button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
